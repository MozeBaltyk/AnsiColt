---
# .ansible-lint
exclude_paths:
  - .git/
  - .gitignore
  - Makefile
  - justfile
  - .cache/
  - .github/
  - molecule/
  - docs/
  - .ansible-lint
  - .yamllint
  - scripts/
  - playbooks/tasks
  
skip_list:
  - yaml[line-length] # max line length 
  - command-instead-of-shell  # Use shell only when shell functionality is required
  - experimental  # all rules tagged as experimental
